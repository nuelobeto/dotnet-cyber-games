@page "/"

<PageTitle>Cyber-Games Hub</PageTitle>

<div class="hub-container">
    <header class="hub-header">
        <h1 class="glitch">CYBER GAMES HUB</h1>
        <p class="subtitle">30 Days of .NET</p>
        <div class="stats-row">
            <span class="stat">PROJECT_STATUS: ACTIVE</span>
            <span class="stat">CURRENT_PHASE: 11/30</span>
        </div>
    </header>

    <div class="grid-container">
        <a href="/brute-force-guess" class="game-card active">
            <div class="card-id">DAY_01</div>
            <h3>Brute-Force Guess</h3>
            <p>Focus: Password entropy & brute force.</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/digital-lock-pick" class="game-card active">
            <div class="card-id">DAY_02</div>
            <h3>Digital Lock Pick</h3>
            <p>Focus: Timing attacks & synchronization.</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/packet-catcher" class="game-card active">
            <div class="card-id">DAY_03</div>
            <h3>Packet Catcher</h3>
            <p>Focus: Traffic sniffing & packet filtering.</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/encryption-snake" class="game-card active">
            <div class="card-id">DAY_04</div>
            <h3>Encryption Snake</h3>
            <p>Focus: Queues, Enums, Async, LINQ, Collections, Timers & Events</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/sql-invaders" class="game-card active">
            <div class="card-id">DAY_05</div>
            <h3>SQL Invaders</h3>
            <p>Focus: Collision Logic</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/memory-match" class="game-card active">
            <div class="card-id">DAY_06</div>
            <h3>Memory Match</h3>
            <p>Focus: Arrays, State</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/phishing-mail-sort" class="game-card active">
            <div class="card-id">DAY_07</div>
            <h3>Phishing Mail Sort</h3>
            <p>Focus: Conditionals, Regex</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/firewall-pong" class="game-card active">
            <div class="card-id">DAY_08</div>
            <h3>Firewall Pong</h3>
            <p>Focus: Velocity, Physics</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/battleships" class="game-card active">
            <div class="card-id">DAY_09</div>
            <h3>Battleships</h3>
            <p>Focus: Multi-dimensional Arrays & Procedural Logic</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/port-scanner" class="game-card active">
            <div class="card-id">DAY_10</div>
            <h3>Port Scanner</h3>
            <p>Focus: Dictionary, Tasks</p>
            <span class="tag">COMPLETED</span>
        </a>

        <a href="/hash-match-tetris" class="game-card active">
            <div class="card-id">DAY_11</div>
            <h3>Hash-Match Tetris</h3>
            <p>Focus: Structs, Classes</p>
            <span class="tag">COMPLETED</span>
        </a>

        @for (int i = 12; i <= 13; i++)
        {
            <div class="game-card locked">
                <div class="card-id">DAY_@(i < 10 ? "0" : "")@i</div>
                <h3>[ENCRYPTED_DATA]</h3>
                <p>Status: Locked. Access scheduled for Day @i.</p>
                <span class="tag">LOCKED</span>
            </div>
        }
    </div>

    <footer class="hub-footer">
        <p>> _HELLO_WORLD_FROM_NUEL_OBETO</p>
    </footer>
</div>

<style>
    * {
    box-sizing: border-box;
    }

    .hub-container {
        background-color: #0d0208;
        color: #00ff41;
        font-family: 'Courier New', Courier, monospace;
        padding: 2rem;
    }

    .hub-header {
        border-bottom: 2px solid #00ff41;
        margin-bottom: 30px;
        padding-bottom: 20px;
    }

    .glitch { font-size: 3rem; font-weight: bold; margin: 0; }
    .subtitle { color: #888; font-size: 1.1rem; }

    .stats-row { display: flex; gap: 20px; margin-top: 15px; font-size: 0.8rem; }
    .stat { background: #1a1a1a; padding: 5px 10px; border-radius: 4px; }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
    }

    .game-card {
        border: 1px solid #333;
        padding: 20px;
        text-decoration: none;
        color: inherit;
        transition: all 0.3s ease;
        position: relative;
    }

    .game-card.active { border-color: #00ff41; background: rgba(0, 255, 65, 0.05); }
    .game-card.active:hover { transform: translateY(-5px); box-shadow: 0 0 15px #00ff41; }
    
    .game-card.locked { opacity: 0.5; cursor: not-allowed; border-style: dashed; }

    .card-id { font-size: 0.7rem; color: #888; }
    .tag { font-size: 0.7rem; font-weight: bold; padding: 2px 8px; position: absolute; top: 20px; right: 20px; border: 1px solid; }
    .active .tag { border-color: #00ff41; }
    .locked .tag { border-color: #444; }

    .hub-footer { margin-top: 50px; border-top: 1px solid #333; padding-top: 20px; font-size: 0.8rem; color: #444; }
</style>